@using nwBlog.WebApp.Areas.Admin.ViewModels.SystemTool
@model CityListViewModel

@{
    ViewBag.Title = "CityList";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Şehir Listesi</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dtCities" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Şehir Adı</th>
                                <th>Üye Sayısı</th>
                                <th>Eklenme Tarihi</th>                            
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Cities)
                            {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.AppUsers.Count()</td>
                                <td>@item.CreatedOn</td>

                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section dataTable
{
    <script>
        $(document).ready(function () {
            $('#dtCities').DataTable({
                "language":
                {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
                }
            });
        });

    </script>
}

