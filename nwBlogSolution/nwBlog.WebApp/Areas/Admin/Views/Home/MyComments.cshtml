@using nwBlog.WebApp.Areas.Admin.ViewModels.Home
@model MyCommnentsViewModel

@{
    ViewBag.Title = "MyCommnents";
}

<!--Comments-->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Yorumlarım</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dtComments" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Blog</th>
                                <th>Yorum</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Comments)
                            {
                            <tr>
                                <td>@(item.AppBlog.Tittle.Length > 40 ? item.AppBlog.Tittle.Substring(0, 37) + "..." : item.AppBlog.Tittle)</td>
                                <td>@item.Text</td>
                                <td>@item.CreatedOn</td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section dataTable
{
    <script>
        $(document).ready(function () {
            $('#dtComments').DataTable({
                "language":
                {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
                }
            });           
        });

    </script>
}