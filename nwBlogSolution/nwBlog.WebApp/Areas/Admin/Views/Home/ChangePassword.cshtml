@using nwBlog.WebApp.Areas.Admin.ViewModels.Home
@model ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
}


<div class="row">
    <div class="col-md-12">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group row">
                            <label for="Password" class="col-sm-2 col-form-label">Eski Parolanız</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @id = "Password" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="RePassword" class="col-sm-2 col-form-label">Eski Parolanız (Tekrar)</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", @id = "RePassword" })
                                @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="NewPassword" class="col-sm-2 col-form-label">Yeni Parolanız</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", @id = "RePassword" })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-10 offset-2">
                                <button type="submit" class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">Kaydet</span>
                                </button> &nbsp;
                                <a href="@Url.Action("MyInfo","Home")" class="btn btn-secondary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-arrow-left"></i>
                                    </span>
                                    <span class="text">Vazgeç</span>
                                </a>
                            </div>

                        </div>

                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section createObj
{
}
