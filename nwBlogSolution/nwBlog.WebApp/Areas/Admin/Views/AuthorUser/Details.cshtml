            <!-- Card Content - Collapse -->
            <div class="collapse show" id="collapseCardVisits">
                <div class="card-body">
                    <table class="table table-bordered table-hover" id="dtVisits" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Ip Adres</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LastVisits)
                            {
