@using nwBlog.WebApp.Areas.Admin.ViewModels.Blog
@model AddCategoryViewModel


@{
    ViewBag.Title = "AddCategory";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    @Html.HiddenFor(model => model.BlogId)
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label">Kategori Adı</label>
                        <div class="col-sm-10">

                            @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryId, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-10 offset-2">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
