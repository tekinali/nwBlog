@using nwBlog.Entities
@model Blog

@{
    ViewBag.Title = "Delete";
}


<div class="row">
    <div class="col-md-12">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="form">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group row">
                            <label for="Tittle" class="col-sm-2 col-form-label">Başlık</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.Tittle, new { @class = "form-control", @id = "Tittle", @readonly = "" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Username" class="col-sm-2 col-form-label">Kullancıcı</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.AppUser.Username, new { @class = "form-control", @id = "Username", @readonly = "" })
                            </div>
                        </div>

                        

                        <div class="form-group row">
                            <div class="col-md-10 offset-2">

                                <a href="@Url.Action("Details","Blog",new {@id=Model.Id })" class="btn btn-secondary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-arrow-left"></i>
                                    </span>
                                    <span class="text">Vazgeç</span>
                                </a>
                                &nbsp;

                                <button type="submit" class="btn btn-danger">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text" style="width:100px;">Sil</span>
                                </button>

                            </div>

                        </div>

                    }
                </div>
            </div>

        </div>
    </div>
</div>

