@using nwBlog.WebApp.Areas.Admin.ViewModels.Blog
@model CreateViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Blog Bilgileri</h6>
                </div>
                <div class="card-body">
                    <h3><b>Başlık</b></h3>
                    @Html.TextAreaFor(model => model.Tittle, new { @class = "form-control", @id = "Tittle", @rows = "3" })
                    @Html.ValidationMessageFor(model => model.Tittle, "", new { @class = "text-danger" })
                    <hr />

                    <h3><b>Özet</b></h3>
                    @Html.TextAreaFor(model => model.Summary, new { @class = "form-control", @id = "Summary", @rows = "5" })
                    @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                    <hr />

                    <h3><b>İçerik</b></h3>
                    @Html.TextAreaFor(model => model.Text, new { @id = "Text", @name = "Text" })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    <hr />



                </div>
            </div>
        </div>


        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-body">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Vazgeç</span>
                    </a>

                    &nbsp;

                    <button type="submit" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-check"></i>
                        </span>
                        <span class="text">Kaydet</span>
                    </button>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="form-group ">
                        <label for="User">Kullanıcı</label>

                        @Html.DropDownListFor(model => model.UserId, (SelectList)ViewBag.UserId, "Kullanıcı Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group ">
                        <label for="Category">Kategori</label>

                        @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryId, "Kategori Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Url">Url Adı</label>
                        @Html.TextBoxFor(model => model.UrlName, new { @class = "form-control", @id = "Url" })
                        @Html.ValidationMessageFor(model => model.UrlName, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
        </div>
    </div>

}
@section createObj
{
}

@section CkEditor
{
    <script>
     CKEDITOR.replace('Text');
    </script>

}