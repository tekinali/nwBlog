@using nwBlog.Entities
@model List<Like>

@{
    ViewBag.Title = "MyLikes";
}

<div class="row pt-4 pb-5">
    <div class="col-lg-12">
        <h2>Beğenilerim</h2>

        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning">
                <span class="glyphicon glyphicon-info-sign"></span>
                <strong>Beğeniniz bulunmamaktadır.</strong>
            </div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Blog</th>                  
                        <th scope="col">Tarih</th>                     
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action("BlogPost","Home",new {@Blog=item.BlogId })">@(item.Blog.Tittle.Length > 80 ? item.Blog.Tittle.Substring(0, 80) + "..." : item.Blog.Tittle)</a></td>
                            <td>@item.CreatedOn.ToString("d MMMM dddd yyyy hh:mm")</td>                          
                        </tr>
                    }

                </tbody>


            </table>
        }
    </div>
</div>