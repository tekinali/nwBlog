@using nwBlog.WebApp.Helpers;
@using System.Web.Optimization
@using nwBlog.WebApp.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/home/css/base")


</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")"><span class="fa fa-pencil"></span> Abc Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item @Html.ActivePage("Home","Index")">
                        <a class="nav-link" href="@Url.Action("Index","Home")"><span class="fa fa-th-list"></span> Bloglar</a>
                    </li>
                    <li class="nav-item @Html.ActivePage("Account","MyComments")">
                        <a class="nav-link" href="@Url.Action("MyComments","Account")"><span class="fa fa-comment"></span> Yorumlarım</a>
                    </li>
                    <li class="nav-item @Html.ActivePage("Account","MyLikes")">
                        <a class="nav-link" href="@Url.Action("MyLikes","Account")"><span class="fa fa-thumbs-up "></span> Beğenilerim</a>
                    </li>
                </ul>
                              

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @Html.ActivePage("Account","MyInfo")">
                        <a class="nav-link" href="@Url.Action("MyInfo","Account")"><span class="fa fa-user"></span>  @CurrentSession.User.Username</a>
                    </li>
                    <li class="nav-item mt-1">
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Logout","Account")"> Çıkış</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("footer", required: false)

    @Scripts.Render("~/home/js/base")

