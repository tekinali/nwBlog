@using nwBlog.WebApp.Areas.Author.ViewModels.Blog
@model AddCategoryViewModel

@{
    ViewBag.Title = "AddCategory";
}

<div class="row pt-4 pb-5">
    <div class="col-lg-12">
        <h2>Kategori Ekle</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.BlogId)
            <div class="form-group row">
                <label for="Name" class="col-sm-2 col-form-label">Kategori Adı</label>
                <div class="col-sm-10">

                    @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryId, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-2">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        }
    </div>
</div>

