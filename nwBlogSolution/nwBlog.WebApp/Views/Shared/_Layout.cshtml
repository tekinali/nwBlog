@using nwBlog.WebApp.Helpers;
@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - nwBlog</title>

    @Styles.Render("~/home/css/base")


</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")"><span class="fa fa-pencil"></span> Abc Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item @Html.ActivePage("Home","Index")">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Bloglar</a>
                    </li>
                    <li class="nav-item @Html.ActivePage("Home","About")">
                        <a class="nav-link" href="@Url.Action("About","Home")">Hakkımızda</a>
                    </li>
                    <li class="nav-item @Html.ActivePage("Home","Contact")">
                        <a class="nav-link" href="@Url.Action("Contact","Home")">İletişim</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @Html.ActivePage("Account","Login")">
                        <a class="nav-link" href="@Url.Action("Login","Account")"><span class="fa fa-sign-in"></span> Giriş</a>
                    </li>
                    <li class="nav-item @Html.ActivePage("Account","Register")">
                        <a class="nav-link" href="@Url.Action("Register","Account")"><span class="fa fa-users"></span> Kayıt Ol</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("footer", required: false)

    @Scripts.Render("~/home/js/base")

