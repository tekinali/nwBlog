@using nwBlog.Entities
@model List<Category>

<!-- Categories Widget -->
<div class="card border-primary my-4">
    <h5 class="card-header">Kategoriler</h5>
    <div class="card-body">
        <div class="row">

            <div class="list-group" style="width:100%;">
                @foreach (var item in Model)
                {
                    <a href="@Url.Action("Index","Home",new { Category=item.Id})" class="list-group-item list-group-item-action">@item.Name</a>
                }
            </div>



        </div>
    </div>
</div>
