
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yönlendirme - AbcBlog</title>


    <link href="~/Themes/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/Themes/Admin/css/sb-admin-2.css" rel="stylesheet" />


</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->

        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="text-gray-900"><span class="fas fa-info"></span> Hata Oluştu</h1>
                                    </div>
                                    <hr>

                                    @{
                                        Exception ex = null;

                                        if (TempData["LastError"] != null)
                                        {
                                            ex = TempData["LastError"] as Exception;
                                        }
                                    }
                                    <p>
                                        Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
                                        <br /><br /><br />
                                        @if (ex != null)
                                        {
                                            <strong>Hata Detay : </strong>
                                            @ex.Message
                                            <br /><br /><br />
                                        }

                                        <br>

                                        <button type="button" id="btnBack" class="btn btn-success waves-effect waves-light" href="@Request.UrlReferrer"> Geri Dön</button>
                                        <hr />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Bootstrap core JavaScript-->
    <script src="~/Themes/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Themes/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Themes/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Themes/Admin/js/sb-admin-2.min.js"></script>


    <script>
        var resizefunc = [];

        var btn = document.getElementById("btnBack");
        btn.onclick = function () {
            window.history.back();
        }
    </script>



</body>
</html>